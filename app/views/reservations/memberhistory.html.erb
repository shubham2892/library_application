<p id="notice"><%= params[:notice] %></p>

<h1>Member's Reservation History</h1>

<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Room</th>
    <th>Member</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @memberhistory.each do |reservation| %>
      <tr>
        <td> <%= reservation.startdate %> </td>
        <td><%= reservation.starttime %> </td>
        <td><%= reservation.endtime %> </td>
        <td><%= reservation.room.room_number %> </td>
        <td><%= reservation.member.email %> </td>
        <% if ((reservation.startdate >= Date.now)&&(reservation.endtime > Time.now)) %>
            <td><%= link_to 'Destroy', reservation, method: :delete, data: {confirm: 'Are you sure?'} %> </td>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>
