<H2>Booking History</H2>
<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @booking_history.each do |booking| %>
      <tr>
        <td><%= booking.startdate.to_s(:long) %> </td>
        <td><%= booking.starttime.strftime("%H:%M:%S") %> </td>
        <td><%= booking.endtime.strftime("%H:%M:%S") %> </td>
        <% if ((booking.startdate>=Time.now)&&(Time.now < (booking.endtime))) %>
            <td><%= 'Current Booking'%></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>
<H2>Room Info</H2>
Room No: <%= @room.room_number %> <br/>
Building: <%= @room.building %> <br/>
Size: <%= @room.size %> <br/>

<%= link_to 'Delete the room', member_path(@room), method: :delete, data: {confirm: 'Are you sure?'} %>
